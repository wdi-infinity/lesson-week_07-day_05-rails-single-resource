<h1> Create a new movie </h1>
 
<p> <%= link_to 'View all movies', movies_path %> </p>

<%= form_for @movie, local: true do |form| %>
    <p>
    <%= form.text_field :director %>
    </p>
    <p>
    <%= form.text_field :title %>
    </p>
    
    <p>
    <%= form.text_field :rating %>
    </p>

    <p>
    <%= form.submit %>
    </p>

    <% end %>