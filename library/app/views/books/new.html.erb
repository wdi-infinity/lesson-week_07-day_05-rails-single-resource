<h2>Create a new book</h2>

<p> <%= link_to 'View All Books', books_path %></p>

<%= form_with scope: :book, url: '/books', local: true do |form| %>
    <p>
       <%= form.text_field :title %>
    </p>
    <p>
       <%= form.text_field :author %>
    </p>
    <p>
       <%= form.submit %>
    </p>
<% end %>