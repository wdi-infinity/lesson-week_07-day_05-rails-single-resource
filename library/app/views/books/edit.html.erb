<h1> Edit a new book </h1>
<p> <%= link_to 'Go to the list', books_path %></p>
# local true wont create the AJAX request 
<%= form_for @book, local: true do |form| %>
    <p>
        <%= form.text_field :title %>
    </p>
    <p>
         <%= form.text_field :author %>
</p>
<p>
        <%= form.submit %>
</p>
<% end %>